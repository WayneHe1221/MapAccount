<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnclear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/btndel"
            app:layout_constraintRight_toRightOf="@+id/btndel"
            app:layout_constraintTop_toTopOf="@+id/btn6" />

        <Button
            android:id="@+id/btndel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="DEL"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btnclear"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/btn9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/btnadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="+"
            android:textColor="@color/bgColor"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/btnsub"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btndiv" />

        <Button
            android:id="@+id/btnpoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="."
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/btn1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn7" />

        <Button
            android:id="@+id/btnequ"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/bgColor"
            android:text="="
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/btnclear"
            app:layout_constraintRight_toRightOf="@+id/btnclear"
            app:layout_constraintTop_toBottomOf="@+id/btnclear" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="0"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/btn2"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn9" />

        <Button
            android:id="@+id/btnsub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="-"
            android:textColor="@color/bgColor"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnadd"
            app:layout_constraintLeft_toLeftOf="@+id/btnmul"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btndiv" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="1"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnpoint"
            app:layout_constraintLeft_toLeftOf="@+id/btn4"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn7" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="3"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn0"
            app:layout_constraintLeft_toLeftOf="@+id/btn6"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn9" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn0"
            app:layout_constraintLeft_toLeftOf="@+id/btn5"
            app:layout_constraintRight_toRightOf="@+id/btn8" />

        <Button
            android:id="@+id/btnmul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="×"
            android:textColor="@color/bgColor"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnsub"
            app:layout_constraintLeft_toLeftOf="@+id/btndiv"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btndiv" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="4"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn1"
            app:layout_constraintLeft_toLeftOf="@+id/btn7"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn7" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="6"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn3"
            app:layout_constraintLeft_toLeftOf="@+id/btn9"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn9" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="5"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn2"
            app:layout_constraintLeft_toLeftOf="@+id/btn8"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn8" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="8"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn5"
            app:layout_constraintLeft_toRightOf="@+id/btn7"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="9"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn6"
            app:layout_constraintLeft_toRightOf="@+id/btn8"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="7"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btn4"
            app:layout_constraintLeft_toRightOf="@+id/btndiv"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="÷"
            android:textColor="@color/bgColor"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnmul"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/calView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/background_light"
            android:gravity="right"
            android:text="0"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/textView4"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/bgColor"
            android:text="完成"
            android:textColor="@android:color/background_light"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:id="@+id/scrollView2"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2">

        <LinearLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="項目"
            android:textAlignment="center"
            android:textSize="38sp"
            app:layout_constraintHorizontal_bias="0.427"
            app:layout_constraintLeft_toRightOf="@+id/finish_add_item"
            app:layout_constraintRight_toLeftOf="@+id/switch1"
            app:layout_constraintTop_toBottomOf="@+id/date_view" />

        <Button
            android:id="@+id/btn_editObj"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/date_view"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/finish_add_item" />

        <TextView
            android:id="@+id/coordinate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="台北市中正區愛國西路1號"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toRightOf="@+id/finish_add_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_view" />

        <Button
            android:id="@+id/btn_setplace"
            android:layout_width="75dp"
            android:layout_height="55dp"
            app:layout_constraintLeft_toLeftOf="@+id/date_view"
            app:layout_constraintTop_toBottomOf="@+id/btn_editObj" />

        <Button
            android:id="@+id/finish_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="返回"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/date_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:text="2017/12/12"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="35sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/finish_add_item"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/finish_add_item"
            android:layout_marginBottom="0dp" />
        <Button
            android:id="@+id/date_chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="日期"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="@+id/date_view"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="true"
            android:textOff="收入"
            android:textOn="支出"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_view"
            app:layout_constraintVertical_bias="0.13999999" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>